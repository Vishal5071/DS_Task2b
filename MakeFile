====================================================================
Makefile for the Task-2B
====================================================================

1. Configuration Variables

TARGET = task2b
CC = gcc
CFLAGS = -Wall -Wextra -g -std=c11
SOURCES = main.c helper.c
OBJECTS = $(SOURCES:.c=.o)

2. Phony Targets

.PHONY: all clean run

all: $(TARGET)

3. Main Target Rule (Linking)

$(TARGET): $(OBJECTS)
$(CC) $(CFLAGS) $(OBJECTS) -o $(TARGET)

4. Implicit Rule (Compilation)

%.o: %.c
$(CC) $(CFLAGS) -c $< -o $@

5. Utility Targets

clean:
rm -f $(OBJECTS) $(TARGET)

run: $(TARGET)
./$(TARGET)